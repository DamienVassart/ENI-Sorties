{% extends 'base.html.twig' %}

{% block body %}
    <h1>Modifier la sortie {{ sortie.nom }}</h1>
    <fieldset>
        <legend>Détails sortie</legend>
        {{  form_start(sortieForm) }}
        {{ form_row(sortieForm.nom) }}
        {{ form_row(sortieForm.dateHeureDebut) }}
        {{ form_row(sortieForm.duree) }}
        {{ form_row(sortieForm.dateLimiteInscription) }}
        {{ form_row(sortieForm.nbInscriptionsMax) }}
        {{ form_row(sortieForm.infosSortie) }}
        {{ form_row(sortieForm.Campus) }}
    </fieldset>
    <fieldset>
        <legend>Sélection du lieu</legend>
        <button>
            <a href="{{ path('lieu_createWhenUpdate', {'id': sortie.id}) }}">Ajouter un lieu</a>
        </button>
        <p>Ou sélectionner un lieu existant: </p>
        {% if sortieForm.Ville is defined %}
            {{ form_row(sortieForm.Ville) }}
        {% endif %}
        {% if sortieForm.select is defined %}
            {{ form_row(sortieForm.select) }}
        {% endif %}
        {% if sortieForm.Lieu is defined %}
            {{ form_row(sortieForm.Lieu) }}
        {% endif %}
    </fieldset>
    <button type="submit" class="btn-block add-btn btn">Valider les modifications</button>
    {{  form_end(sortieForm) }}
{% endblock %}

{% block title %}
    Modifier la sortie {{ sortie.nom}} {{ parent() }}
{% endblock %}

